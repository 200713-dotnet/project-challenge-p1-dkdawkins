@model PizzaBox.Client.Models.StoreHomeViewModel

@{
    ViewData["Title"] = "Store Welcome Page";
}

<h1>Welcome @Model.Store.Name !</h1>
<p>What would you like to do?</p>

<form action="/store/orders" method="post">
  <label for="name">Enter a name to filter orders by (leave blank to view all orders)</label>
  <input type="text" name="name" id="name">
  <input type="submit" value="View Orders">
</form>

<form action="/store/deleteorder" method="post">
  @Html.AntiForgeryToken()
  <input type="submit" value="Delete the Oldest Order">
</form>

<form action="/start/home">
  <input type="submit" value="Exit">
</form>